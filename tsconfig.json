{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["dom", "es2017"],
    "typeRoots": [
      "./src/js/types"
    ]
  }
}
